diff --git a/control/json/fan.cpp b/control/json/fan.cpp
index 3641279..b702321 100644
--- a/control/json/fan.cpp
+++ b/control/json/fan.cpp
@@ -38,6 +38,8 @@ Fan::Fan(const json& jsonObj) :
     setInterface(jsonObj);
     setSensors(jsonObj);
     setZone(jsonObj);
